# umaralertbot/whale_screener/whale_screener_main.py

import logging

class WhaleScreener:
    def __init__(self):
        self.logger = logging.getLogger(__name__)
        self.logger.info("WhaleScreener initialized")

    def detect_unusual_activity(self, trade_data):
        # Simple placeholder: flag trades > $5M on low-liquidity pairs
        suspicious = []
        for trade in trade_data:
            if trade.get("amount_usd", 0) > 5_000_000 and trade.get("pair_liquidity", 0) < 1_000_000:
                suspicious.append(trade)
        return suspicious

    def run_screening(self, feed_data):
        self.logger.info("Running whale screening...")
        flagged_trades = self.detect_unusual_activity(feed_data)
        return flagged_trades
